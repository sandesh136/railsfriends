<div class="bg-light p-5 rounded-lg m-3">
  <h1 class="display-4">
  <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
  <%= @friend.email %> |
  <%= @friend.phone %> |
  <%= @friend.twitter %>
<br/> <br/> 

  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> |
  <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
<br/> 
  <%= button_to "Destroy this friend", @friend, method: :delete %>

</div>
</p>


